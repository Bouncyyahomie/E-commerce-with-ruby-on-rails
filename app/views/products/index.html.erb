<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= link_to 'Download CSV', products_path(format: :csv) %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.status %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.categories.empty? ? 'NA' : product.categories.map(&:name).join(', ') %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<br>
<%= link_to 'New Category', new_category_path %>

<br>

<%= form_tag products_csv_upload_path, multipart: true do %>
  <%= file_field_tag :csv_file, class: 'file-input' %>
  <%= submit_tag :upload, class: 'button'%>
<% end %>